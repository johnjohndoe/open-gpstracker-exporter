<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handlers"
            type="nl.renedegroot.android.opengpstracker.exporter.about.AboutHandlers" />

        <variable
            name="model"
            type="nl.renedegroot.android.opengpstracker.exporter.about.AboutModel" />
    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_about_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@{@string/about_version(model.version, model.gitHash, model.buildNumber)}" />

        <WebView
            android:id="@+id/fragment_about_webview"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            app:url="@{model.url}" />

        <Button
            android:id="@+id/fragment_about_button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="@{handlers.onOkay}"
            android:text="@android:string/ok" />
    </LinearLayout>
</layout>