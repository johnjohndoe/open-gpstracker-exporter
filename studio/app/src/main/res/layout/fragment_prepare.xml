<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="handlers"
            type="nl.renedegroot.android.opengpstracker.exporter.prepare.PrepareHandlers" />

        <variable
            name="model"
            type="nl.renedegroot.android.opengpstracker.exporter.prepare.PrepareModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".prepare.PrepareFragment">

        <TextView
            android:id="@+id/fragment_export_explained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:text="This application can export all your Open GPS Tracker tracks to GPX files on Google Drive." />

        <CheckBox
            android:id="@+id/fragment_export_attachments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fragment_export_explained"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/fragment_export_explained"
            android:layout_below="@+id/fragment_export_explained"
            android:checked="@{model.areImagesIncluded}"
            android:text="@string/export_prepare_also_images" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fragment_export_explained"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/fragment_export_explained"
            android:onClick="@{handlers.onStart}"
            android:text="Start export" />


    </RelativeLayout>
</layout>